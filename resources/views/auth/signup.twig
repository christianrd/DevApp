{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">{{ title }}</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input type="hidden" role="uploadcare-uploader" name="avatar"
                                   data-crop="true"
                                   data-images-only="true" />
                        </div>
                        <button type="submit" class="btn btn-default">Sing up</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        UPLOADCARE_LOCALE = "en";
        UPLOADCARE_TABS = "file url facebook gdrive";
        UPLOADCARE_PUBLIC_KEY = "YOUR_UPLOADCARE_API_KEY";
    </script>
    <script charset="utf-8" src="//ucarecdn.com/widget/2.9.0/uploadcare/uploadcare.full.min.js"></script>
{% endblock %}